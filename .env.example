# WhatsApp group chat identifier (format usually ends with @g.us)
WHATSAPP_GROUP_ID=1234567890-123456789@g.us

# GitHub webhook secret used for HMAC signature verification
GITHUB_WEBHOOK_SECRET=replace-with-strong-secret

# Optional filter to accept events only from a specific repository (owner/name)
GITHUB_REPO=your-org/your-repo

# HTTP port for the Express server
PORT=3000

# Set to true when running on Render so Puppeteer uses the system Chromium
RENDER=false
